@model BookModel

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverImagePath) ? "/images/logo1.jpg" : Model.CoverImagePath)" class="img-thumbnail">
    <div class="card-body">
        <h3 class="card-title">@(String.IsNullOrEmpty(Model.Title) ? "No Title" : Model.Title)</h3>
        <p class="card-text">@(String.IsNullOrEmpty(Model.Description) ? "There is no description to show" : Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-controller="book" asp-action="getbook" asp-route-Id="@Model.Id" btn btn-sm btn-outline-secondary">View details</a>
            </div>
            <small class="text-muted">@(string.IsNullOrEmpty(Model.Author) ? "NA" : Model.Author)</small>
        </div>
    </div>
</div>